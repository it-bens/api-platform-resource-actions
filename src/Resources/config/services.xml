<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="itb_api_platform_update_actions.resource_action_command_map" class="ITB\ApiPlatformUpdateActionsBundle\Command\ResourceActionCommandMap">
            <argument/> <!-- filled in via configuration -->
            <argument type="service" id="api_platform.metadata.resource.metadata_factory"/>
        </service>
        <service id="itb_api_platform_update_actions.request_transformer" class="ITB\ApiPlatformUpdateActionsBundle\Request\RequestTransformer">
            <argument type="service" id="itb_api_platform_update_actions.resource_action_command_map"/>
            <tag>api_platform.data_transformer</tag>
        </service>
        <service id="itb_api_platform_update_actions.command_factory" class="ITB\ApiPlatformUpdateActionsBundle\Command\CommandFactory" public="false">
            <argument type="service" id="itb_api_platform_update_actions.resource_action_command_map"/>
            <argument type="service" id="serializer"/>
        </service>
        <service id="itb_api_platform_update_actions.controller" class="ITB\ApiPlatformUpdateActionsBundle\Controller\Controller" public="false">
            <argument type="service" id="itb_api_platform_update_actions.command_factory"/>
            <argument type="service" id="api_platform.validator"/>
            <argument type="service" id="messenger.default_bus"/>
            <argument/> <!-- filled in via configuration -->
            <argument/> <!-- filled in via configuration -->
        </service>
        <service alias="itb_api_platform_update_actions.controller" id="ITB\ApiPlatformUpdateActionsBundle\Controller\Controller" public="true"/>
    </services>
</container>