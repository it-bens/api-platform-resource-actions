{
  "name": "it-bens/api-platform-update-actions-bundle",
  "description": "Bundle that can add actions to API Platform operations to deserialize payloads into command objects and dispatch them via message bus.",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Bens",
      "email": "martin.bens@it-bens.de"
    }
  ],
  "require": {
    "php": ">=8.0",
    "api-platform/core": "^2.6",
    "it-bens/reflection-constructor": "^0.2.0",
    "pear/console_table": "^1.3",
    "symfony/config": "^5.4|^6.1",
    "symfony/dependency-injection": "^5.4|^6.1",
    "symfony/http-kernel": "^5.4|^6.1",
    "symfony/messenger": "^5.4|^6.1",
    "symfony/validator": "^5.4|^6.1"
  },
  "require-dev": {
    "captainhook/plugin-composer": "^5.3",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.7",
    "symfony/yaml": "^5.4|^6.1"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "captainhook/plugin-composer": true
    }
  },
  "autoload": {
    "psr-4": { "ITB\\ApiPlatformUpdateActionsBundle\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Tests\\ITB\\ApiPlatformUpdateActionsBundle\\": "tests/" }
  }
}
